{% extends "SellermaniaTestBundle::layout.html.twig" %}

{% block page_content %}
    <h2>Idea</h2>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ idea.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ idea.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ idea.content }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if idea.date %}{{ idea.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ idea.author }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="list-inline">
        <li>
            <a href="{{ path('idea_list') }}" class="btn btn-default">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('edit_idea', { 'id': idea.id }) }}" class="btn btn-warning">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
